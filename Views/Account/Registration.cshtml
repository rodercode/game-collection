@{
    ViewData["Title"] = "Registration";
}

<h1 class="mb-5">@ViewData["Title"]</h1>

<div>
  <form>
    <div class="d-grid gap-4">
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <input type="email" class="form-control form-control-lg" placeholder="Firstname">
                </div>
            </div>
            
            <div class="col">
                <div class="form-group">
                    <input type="text" class="form-control form-control-lg" placeholder="Lastname">
                </div>
            </div>
        </div>
    
        <div class="form-group">
            <input type="text" class="form-control form-control-lg" placeholder="Username">
        </div>
    
        <div class="form-group">
            <input type="text" class="form-control form-control-lg" placeholder="Email">
        </div>
    

        <div class="form-group">
            <input type="text" class="form-control form-control-lg" placeholder="Password">
        </div>

        <div class="form-group">
            <input type="text" class="form-control form-control-lg" placeholder="Conform Password">
        </div>

        <button type="submit" class="btn btn-lg btn-primary">Submit</button>
    </div>
 </form>  
</div>